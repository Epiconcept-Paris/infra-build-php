FROM debian:bullseye
MAINTAINER Epiconcept

ENV DEBVER=bullseye
ENV DEBNUM=11
ENV CLI_DEPS libjpeg62-turbo, libpng16-16, libxpm4, libmcrypt4, libxslt1.1, libcurl4, libfreetype6, libmariadb3, libxml2, libreadline8, libc6
ENV BUILD_NUM=2
ENV USER=cedric
ENV LANG=C
ENV TZ=Europe/Paris
RUN groupadd -g 1000 cedric; useradd -u 1000 -g 1000 cedric
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ >/etc/timezone
RUN echo "export TERM=xterm\nalias l='ls -Al'\necho \"Use:\n    /opt/php-mk/build\\nto start the build\"" >>/root/.bashrc

# Update/upgrade, install tools and build deps
RUN apt-get update && apt-get upgrade -y && apt-get install -y --no-install-recommends ed vim apt-rdepends file curl build-essential autoconf pkg-config faketime fakeroot lintian apache2 apache2-dev libmcrypt-dev libmhash-dev libjpeg-dev libxpm-dev libxslt1-dev libbz2-dev libxft-dev libmariadbclient-dev libmariadb-dev-compat libcurl4-openssl-dev libssl-dev libpcre3-dev libsystemd-dev libreadline-dev libssh2-1-dev

RUN mkdir -p /opt/php-mk/dist /opt/php-mk/files
RUN mkdir /opt/php-mk/hooks
COPY 5/files/apcu-4.0.11.tgz /opt/php-mk/files
COPY 5/hooks/apcu.sh /opt/php-mk/hooks
COPY 5/files/oauth-1.2.3.tgz /opt/php-mk/files
COPY 5/hooks/oauth.sh /opt/php-mk/hooks
COPY 5/files/ssh2-0.12.tgz /opt/php-mk/files
COPY 5/hooks/ssh2.sh /opt/php-mk/hooks
COPY 5/files/5.6/openssl.patch /opt/php-mk/files
COPY 5/hooks/files.sh /opt/php-mk/hooks
COPY files/PEAR_Manpages-1.10.0.tgz /opt/php-mk/files
COPY hooks/pearman.sh /opt/php-mk/hooks
COPY hooks/mysqli.sh /opt/php-mk/hooks
COPY hooks/freetype.sh /opt/php-mk/hooks
COPY 5/5.6.40/php-5.6.40.tar.bz2 /opt/php-mk/files
COPY pkgs /opt/php-mk/pkgs
COPY run/build /opt/php-mk

CMD [ "/opt/php-mk/build" ]
